@model Domain.Entities.ColorType

@{
    ViewData["Title"] = "Renk Silme";
    Response response = ViewBag.Response;
}

<h1>Renk Silme</h1>

<h3>Rengi silmek istediğinize emin misiniz?</h3>

@if (response != null)
{
    <message-box is-success="@response.IsSuccess" message="@response.Message"></message-box>
}
<div>
    <h4>Renk</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.HiddenFor(model => model.Id)
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Renk Listesi</a>
    </form>
</div>
